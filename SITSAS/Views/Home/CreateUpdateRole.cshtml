@model  SITSAS.Models.CreateUpdateRoleModel

<button class="image-button warning" onclick="$('#submit').click();">
    <span class="mif-floppy-disk icon"></span>
    <span class="caption">Save</span>
</button>

@if (Model.RoleExists)
{
        <button class="image-button warning" onclick="if (confirm('Are you sure you want to delete this item?') == true) { window.location.href = '/Home/DeleteRole?ID=@Model.ExistingRole.RoleID'; }">
            <span class="mif-bin icon"></span>
            <span class="caption">Delete</span>
        </button>
    }
<hr class="thin bg-grayLighter">
    <div class="content" style="background-color:#d7f4ef;">

        <form id="form0" action="/Home/SaveRole" method="post">
            <input type="submit" id="submit" style="display:none;" />
            <br />
            <br />
            <table style="width: 80%;" align="center">
                <tr>
                    <td style="width: 100%;">
                        <label>Name</label>
                        <div class="input-control text" style="width:100%;">
                            @if (Model.RoleExists)
                            {

                                <input type="text" name="Name" id="Name" value="@Model.ExistingRole.RoleName" style="width: 100%;" required/>
                                <input type="hidden" name="ExistingRoleID" id="ExistingRoleID" value="@Model.ExistingRole.RoleID" />

                            }
                            else
                            {
                                <input type="text" name="Name" id="Name" style="width: 100%;" required/>
                                <input type="hidden" name="ExistingRoleID" id="ExistingRoleID" value="0" />
                            }
                        </div>
                    </td>
                </tr>
            </table>

        </form>
        <br />
        <br />

    </div>
