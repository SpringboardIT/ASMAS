@model  SITSAS.Models.CreateUpdateAreaModel
<button class="image-button warning" onclick="$('#submit').trigger('click');"><span class="icon mif-floppy-disk"></span> Save</button>
@if (Model.AreaExists)
{
    <a class="image-button warning" href="~/Home/DeleteArea?ID=@Model.ExistingArea.ID" onclick="return confirm('Are you sure you want to delete this item?')"><span class="icon mif-bin"></span> Delete</a>
}
<hr class="thin bg-grayLighter">

<div class="panel">
    <div class="heading" style="background-color:#36CAB2;">
        <span class="icon mif-location-city" style="background-color:#1F1C53;"></span>

        @if (Model.AreaExists)
        {
            <span class="title">Update Area</span>

        }
        else
        {
            <span class="title">Create New Area</span>
        }

   
    </div>
    <div class="content" style="background-color:#d7f4ef;">

        <form id="form0" action="/Home/SaveArea" method="post">
            <input type="submit" id="submit" style="display:none;" />
            <br />
            <br />
            <table style="width: 80%;" align="center">
                <tr>
                    <td style="width: 100%;">
                        <label>Name</label>
                        <div class="input-control text" style="width:100%;">
                            @if (Model.AreaExists)
                            {

                                <input type="text" name="Name" id="Name" value="@Model.ExistingArea.Name" style="width: 100%;" required/>
                                <input type="hidden" name="ExistingAreaID" id="ExistingAreaID" value="@Model.ExistingArea.ID" />

                            }
                            else
                            {
                                <input type="text" name="Name" id="Name" style="width: 100%;" required/>
                                <input type="hidden" name="ExistingAreaID" id="ExistingAreaID" value="0" />
                            }
                        </div>
                    </td>
                </tr>
            </table>

        </form>
        <br />
        <br />

    </div>
</div>