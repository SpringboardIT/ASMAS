@model  SITSAS.Models.CreateUpdateStalenessProfileModel

<button class="image-button warning" onclick="$('#submit').trigger('click');"><span class="icon mif-floppy-disk"></span> Save</button>
@if (Model.StalenessProfileExists)
{
    <a class="image-button warning" href="~/Home/DeleteStalenessProfile?ID=@Model.ExistingStalenessProfile.ProfileID" onclick="return confirm('Are you sure you want to delete this item?')"><span class="icon mif-bin"></span> Delete</a>
}
<hr class="thin bg-grayLighter">

<div class="panel">
    <div class="heading" style="background-color:#36CAB2;">
        <<span class="icon mif-sort-desc" style="background-color:#1F1C53;"></span>

        @if (Model.StalenessProfileExists)
        {
            <span class="title">Update Staleness Profile</span>

        }
        else
        {
            <span class="title">Create New Staleness Profile</span>
        }


    </div>
    <div class="content" style="background-color:#d7f4ef;">
        <form id="form0" action="/Home/SaveStalenessProfile" method="post">
            <input type="submit" id="submit" style="display:none;" />
            <br />
            <br />
            <table style="width: 80%;" align="center">
                <tr>
                    <td style="width: 100%;">
                        <label>Name if Staleness Profile</label>
                        <div class="input-control text" style="width:100%;">
                            @if (Model.StalenessProfileExists)
                            {

                                <input type="text" name="Name" id="Name" value="@Model.ExistingStalenessProfile.Name" style="width: 100%;" required />
                                <input type="hidden" name="ExistingStalenessProfileID" id="ExistingStalenessProfileID" value="@Model.ExistingStalenessProfile.ProfileID" />

                            }
                            else
                            {
                                <input type="text" name="Name" id="Name" style="width: 100%;" required />
                                <input type="hidden" name="ExistingStalenessProfileID" id="ExistingStalenessProfileID" value="0" />
                            }
                        </div>
                    </td>
                </tr>
                <tr>
                    <td style="width: 100%;">
                        <label>Static Days</label>
                        <div class="input-control text" style="width:100%;">
                            @if (Model.StalenessProfileExists)
                            {

                                <input type="number" name="StaticDays" id="StaticDays" value="@Model.ExistingStalenessProfile.StaticDays" style="width: 100%;" required />
                            }
                            else
                            {
                                <input type="number" name="StaticDays" id="StaticDays" style="width: 100%;" required />
                            }
                        </div>
                    </td>
                </tr>
                <tr>
                    <td style="width: 100%;">
                        <label>FinalScore</label>
                        <div class="input-control text" style="width:100%;">
                            @if (Model.StalenessProfileExists)
                            {

                                <input type="number" name="FinalScore" id="FinalScore" min="0" value="@Model.ExistingStalenessProfile.FinalScore" style="width: 100%;" required />
                            }
                            else
                            {
                                <input type="number" name="FinalScore" id="FinalScore" min="0" style="width: 100%;" required />
                            }
                        </div>
                    </td>
                </tr>
                <tr>
                    <td style="width: 100%;">
                        <label>Days Until Final Score</label>
                        <div class="input-control text" style="width:100%;">
                            @if (Model.StalenessProfileExists)
                            {

                                <input type="number" name="DaysUntilFinalScore" id="DaysUntilFinalScore" value="@Model.ExistingStalenessProfile.DaysUntilFinalScore" style="width: 100%;" required />
                            }
                            else
                            {
                                <input type="number" name="DaysUntilFinalScore" id="DaysUntilFinalScore" style="width: 100%;" required />
                            }
                        </div>
                    </td>
                </tr>

            </table>
        </form>
        <br />
        <br />

    </div>
</div>

