@model  SITSAS.Models.CreateUpdateFrequencyProfileModel
<button class="image-button warning" onclick="$('#submit').trigger('click');"><span class="icon mif-floppy-disk"></span> Save</button>
@if (Model.FrequencyProfileExists)
{
    <a class="image-button warning" href="~/Home/DeleteFrequencyProfile?ID=@Model.ExistingFrequencyProfile.ID" onclick="return confirm('Are you sure you want to delete this item?')"><span class="icon mif-bin"></span> Delete</a>
}
<hr class="thin bg-grayLighter">

<div class="panel">
    <div class="heading" style="background-color:#36CAB2;">
        <span class="icon mif-calendar" style="background-color:#1F1C53;"></span>

        @if (Model.FrequencyProfileExists)
        {
            <span class="title">Update Frequency Profile</span>

        }
        else
        {
            <span class="title">Create New Frequency Profile</span>
        }

   
    </div>
    <div class="content" style="background-color:#d7f4ef;">

        <form id="form0" action="/Home/SaveFrequencyProfile" method="post">
            <input type="submit" id="submit" style="display:none;" />
            <br />
            <br />
            <table style="width: 80%;" align="center">
                <tr>
                    <td style="width: 100%;">
                        <label>Name</label>
                        <div class="input-control text" style="width:100%;">
                            @if (Model.FrequencyProfileExists)
                            {

                                <input type="text" name="Name" id="Name" value="@Model.ExistingFrequencyProfile.Name" style="width: 100%;" required/>
                                <input type="hidden" name="ExistingFrequencyProfileID" id="ExistingFrequencyProfileID" value="@Model.ExistingFrequencyProfile.ID" />

                            }
                            else
                            {
                                <input type="text" name="Name" id="Name" style="width: 100%;" required/>
                                <input type="hidden" name="ExistingFrequencyProfileID" id="ExistingFrequencyProfileID" value="0" />
                            }
                        </div>
                    </td>
                </tr>
                <tr>
                    <td style="width: 100%;">
                        <label>Frequency</label>
                        <div class="input-control text" style="width:100%;">
                            @if (Model.FrequencyProfileExists)
                            {

                                <input type="text" name="Frequency" id="Frequency" value="@Model.ExistingFrequencyProfile.Frequency" style="width: 100%;" required />
                                
                            }
                            else
                            {
                                <input type="text" name="Frequency" id="Frequency" style="width: 100%;" required />
                   
                            }
                        </div>
                    </td>
                </tr>
                <tr>
                    <td style="width: 100%;">
                        <label>Unit</label>
                        <div class="input-control text" style="width:100%;">
                            @if (Model.FrequencyProfileExists)
                            {
                                <select name='Unit' style='width: 100%;'>
                                    @if (Model.ExistingFrequencyProfile.eDateUnit == 1)
                                    {
                                        <option value="1" selected>Days</option>
                                    }
                                    else
                                    {
                                        <option value="1">Days</option>
                                    }

                                    @if (Model.ExistingFrequencyProfile.eDateUnit == 2)
                                    {
                                        <option value="2" selected>Weeks</option>
                                    }
                                    else
                                    {
                                        <option value="2">Weeks</option>
                                    }

                                    @if (Model.ExistingFrequencyProfile.eDateUnit == 3)
                                    {
                                        <option value="3" selected>Months</option>
                                    }
                                    else
                                    {
                                        <option value="3">Months</option>
                                    }

                                    @if (Model.ExistingFrequencyProfile.eDateUnit == 4)
                                    {
                                        <option value="4" selected>Years</option>
                                    }
                                    else
                                    {
                                        <option value="4">Years</option>
                                    }


                                </select>


                            }
                            else
                            {
                                <select name='Unit' style='width: 100%;'>
                                    <option value="1">Days</option>
                                    <option value="2">Weeks</option>
                                    <option value="3">Months</option>
                                    <option value="4">Years</option>
                                </select>

                            }
                        </div>
                    </td>
                    </tr>
                <tr>
                    <td style="width: 100%;">
                        <label>Start Date</label>
                        <div class="input-control text" style="width:100%;">

                            @if (Model.FrequencyProfileExists)
                            {
                                    <div class="input-control text" data-role="datepicker" data-format="d mmmm yy">
                                        <input type="text" name="StartDate" id="StartDate" value="@Model.ExistingFrequencyProfile.StartDate.ToString("d MMM yy")" style="width: 100%;" />
                                        <button class="button"><span class="mif-calendar"></span></button>
                                    </div>
                            }
                            else
                            {
                                <div class="input-control text" data-role="datepicker" data-format="d mmmm yy">
                                    <input type="text" name="StartDate" id="StartDate" value="@DateTime.Now.ToString("d MMM yy")" style="width: 100%;" />
                                    <button class="button"><span class="mif-calendar"></span></button>
                                </div>
                            }
                        </div>
                    </td>
                </tr>
            </table>

        </form>
        <br />
        <br />

    </div>
</div>